<%= form_for(@bearing, :html => { :multipart => true }) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :manufacturer %>
    <%= f.text_field :manufacturer %>

    <%= f.label :material %>
    <%= f.text_field :material %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :image %>
    <%= f.cl_image_upload :image %>

    <%= f.submit %>
<% end%>